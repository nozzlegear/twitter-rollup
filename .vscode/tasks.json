{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "args": [ "build" ],
            "isBuildCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile",
            "echoCommand": true
        },
        {
            "taskName": "test",
            "command": "",
            "args": [ "dotnet build && dotnet bin/Debug/netcoreapp1.1/twitter-rollup.dll -t '${env:TWITTER_BEARER_TOKEN}' -u 'jessecox,crendor,akamikeb' --known-replies --test" ],
            "isTestCommand": true,
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "restore",
            "command": "",
            "args": [ "dotnet clean && dotnet restore" ],
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": true
        }
    ]
}